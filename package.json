{
  "name": "yoav-fun-packages",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "trainerly-packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace matan-trainings dev",
    "dev:server": "yarn workspace trainerly-server dev",
    "dev:trainerly": "yarn workspace trainerly-trainee-app dev",
    "dev:coach": "yarn workspace trainerly-coach-app dev",
    "build": "yarn workspace matan-trainings build",
    "build:server": "yarn workspace trainerly-server build",
    "build:trainerly": "yarn workspace trainerly-trainee-app build",
    "build:coach": "yarn workspace trainerly-coach-app build",
    "build:all": "yarn build && yarn build:server && yarn build:trainerly && yarn build:coach",
    "preview": "yarn workspace matan-trainings preview",
    "deploy:server": "yarn workspace trainerly-server deploy",
    "type-check": "yarn workspaces foreach run type-check",
    "test": "node scripts/test-all.cjs",
    "test:server": "yarn workspace trainerly-server test",
    "test:coach": "yarn workspace trainerly-coach-app test",
    "test:trainee": "yarn workspace trainerly-trainee-app test",
    "test:watch": "yarn workspaces foreach -pi run test:watch",
    "test:coverage": "yarn workspace trainerly-server test:coverage && yarn workspace trainerly-coach-app test:coverage && yarn workspace trainerly-trainee-app test:coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.2.0"
  },
  "packageManager": "yarn@4.9.1+sha512.f95ce356460e05be48d66401c1ae64ef84d163dd689964962c6888a9810865e39097a5e9de748876c2e0bf89b232d583c33982773e9903ae7a76257270986538"
}
